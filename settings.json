{
    "files.autoSave": "afterDelay",
    "latex-workshop.latex.search.rootFiles.exclude": [
        "tex/**",
        "**/*_generated.tex",        
    ],
    "latex-workshop.latex.search.rootFiles.include": [
        "**/*.tex"
    ],
    // "latex-workshop.latex.autoBuild.interval": 45000, //wird wohl nicht nach Ende gezählt
    "files.exclude": {
        "**/*.aux": true,
        "**/*.bbl": true,
        "**/*.bcf": true,
        "**/*.blg": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.nav": true,
        "**/*.snm": true,
        "**/*.out": true,
        "**/*.run.xml": true,
        "**/*.synctex.gz": true,
        "**/*.synctex(busy)": true,
        // "**/*.tex.bak": true,
        "**/*.toc": true,
        // "**/*_generated.tex": false,
        "*.log": true,
        // "**/*.log": true,
        "**/*.7z": true,
        "**/*.zip": true,
        // "**/*.pdf": true
    },
    "[latex]": {
        "files.encoding": "utf8",
        "editor.formatOnPaste": false,
        "editor.suggestSelection": "recentlyUsedByPrefix"
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.recipes": [
        {
            "name": "Auto-Ref ➞ lualatex",
            "tools": [
                "texrefautomate",
                "lualatex",
                "copy PDF"
            ]
        },
        {
            "name": "lualatex",
            "tools": [
                "lualatex"
            ]
        },
        {
            "name": "lualatex ➞ biber ➞ lualatex × 2",
            "tools": [
                "texrefautomate",
                "lualatex",
                "biber",
                "texrefautomate",
                "lualatex",
                "lualatex",
            ]
        },
        {
            "name": "biber",
            "tools": [
                "biber"
            ]
        },
        {
            "name": "TeX-Ref-Automate",
            "tools": [
                "texrefautomateAll"
            ]
        },
        {
            "name": "Use compiler pool (lualatex)",
            "tools": [
                "processPool"
            ]
        },
    ],
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.latex.tools": [
        {
            "name": "texrefautomate",
            "command": "powershell",
            "args": [
                "%WORKSPACE_FOLDER%\\Automate\\automate.ps1",
                "-all",
                "-p %DOC%",
                "-s",
                "-b %WORKSPACE_FOLDER%"
                // "-author \"<Author here>\""
            ]
        },
        {
            "name": "texrefautomateAll",
            "command": "powershell",
            "args": [
                "%WORKSPACE_FOLDER%\\Automate\\automate.ps1",
                "-all",
                "-s",
                "-b %WORKSPACE_FOLDER%"
                // "-author \"<Author here>\""
            ]
        },
        {
            "name": "copy PDF",
            "command": "powershell",
            "args": [
                "cp",
                "-Path %OUTDIR%\\*.pdf",
                "-Destination C:\\Users\\p4jo\\OneDrive\\Dok\\LaTeX-output"
            ]
            
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                // "-halt-on-error",
                "-file-line-error",
                "-recorder",
                "--output-directory=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk_rconly",
            "command": "latexmk",
            "args": [
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%OUTDIR%/%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "processPool",
            "command": "python",
            "args": [
                "%WORKSPACE_FOLDER%\\Automate\\processPool.py",
            ]
        }
    ],
    "latex-workshop.view.pdf.trim": 2,
    "latex-workshop.message.latexlog.exclude": [
        "I've expected \\\\MT_cramped_internal:Nn to have",
        "You have requested package",
        "Using \\\\overbracket and \\\\underbracket from",
        "I'm going to overwrite the following commands",
        "Unable to apply patch",
        "Empty bibliography"
    ],
    // "latex-workshop.message.error.show": false,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "git.confirmSync": false,
    "git.postCommitCommand": "sync",
    "git.autoStash": true,
    "latex-workshop.message.warning.show": false,
    "latex-workshop.message.error.show": false,
    "latex-workshop.latex.build.clearLog.everyRecipeStep.enabled": false,
    "latex-workshop.chktex.enabled": true,
    
    "editor.fontFamily": "Myriad Pro",
    "editor.unicodeHighlight.allowedCharacters": {
        "γ": true,
        "α": true,
        "ρ": true,
        "σ": true,
        "ν": true
    },
    "latex-workshop.latex.outDir": "%DIR%/out",
}