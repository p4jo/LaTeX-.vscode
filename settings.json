{
    "files.autoSave": "afterDelay",
    "latex-workshop.latex.search.rootFiles.exclude": [
        "tex/**",
        "**/*_generated.tex",        
    ],
    "latex-workshop.latex.search.rootFiles.include": [
        "**/*.tex"
    ],
    // "latex-workshop.latex.autoBuild.interval": 45000, //wird wohl nicht nach Ende gezählt
    "files.exclude": {
        "**/*.aux": true,
        "**/*.bbl": true,
        "**/*.bcf": true,
        "**/*.blg": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.nav": true,
        "**/*.snm": true,
        "**/*.out": true,
        "**/*.run.xml": true,
        "**/*.synctex.gz": true,
        "**/*.synctex(busy)": true,
        // "**/*.tex.bak": true,
        "**/*.toc": true,
        // "**/*_generated.tex": false,
        "*.log": true,
        // "**/*.log": true,
        "**/*.7z": true,
        "**/*.zip": true,
        // "**/*.pdf": true
    },
    "[latex]": {
        "files.encoding": "utf8",
        "editor.formatOnPaste": false,
        "editor.suggestSelection": "recentlyUsedByPrefix"
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.recipes": [
        {
            "name": "processPool (lualatex)",
            "tools": [
                "texrefautomate", 
                // contains biber and index
                "processPool",
                "copy PDF"
            ]
        },
        {
            "name": "lualatex",
            "tools": [
                "texrefautomate",
                "lualatex",
                "copy PDF"
            ]
        },
        {
            "name": 
                "copy PDF",
            "tools": [
                "copy PDF"
            ]
        },
        {
            "name": "lualatex ➞ biber ➞ index ➞ lualatex × 2",
            "tools": [
                "texrefautomate",
                "lualatex",
                "biber",
                "index",
                "texrefautomate",
                "lualatex",
                "lualatex",
                "copy PDF"
            ]
        },
        // {
        //     "name": "biber ➞ index",
        //     "tools": [
        //         "biber",
        //         "index"
        //     ]
        // },
        {
            "name": "TeX-Ref-Automate",
            "tools": [
                "texrefautomateAll"
            ]
        },
    ],
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.latex.tools": [
        {
            "name": "texrefautomate",
            "command": "pwsh",
            "args": [
                "-c",
                "%WORKSPACE_FOLDER%/Automate/automate.ps1 -all -s -b '%WORKSPACE_FOLDER%' -p '%DOC%'" 
                // "%WORKSPACE_FOLDER%/Automate/automate.ps1",
                // "-all",
                // "-p %DOC%",
                // "-s",
                // "-b %WORKSPACE_FOLDER%"
                // "-author \"<Author here>\""
            ]
        },
        {
            "name": "texrefautomateAll",
            "command": "pwsh",
            "args": [
                "-c",
                "%WORKSPACE_FOLDER%/Automate/automate.ps1 -all -s -b %WORKSPACE_FOLDER%" // "-author \"<Author here>\""
            ]
        },
        {
            "name": "copy PDF",
            "command": "pwsh",
            "args": [
                "-c",
                "%WORKSPACE_FOLDER%/Automate/copyToOneDrive.ps1 -f '%OUTDIR%'"
            ]
            
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                // "-halt-on-error",
                "-file-line-error",
                "-recorder",
                "--output-directory=%OUTDIR%",
                // "--max-print-line=300", % Does not work under miktex and lualatex. Use  initexmf --edit-config-file lualatex
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%OUTDIR%/%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "index",
            "command": "xindex",
            "args": [
                "-k", // check language
                "%OUTDIR%/%DOCFILE%"
            ]
        },
        {
            "name": "processPool",
            "command": "python",
            "args": [
                "%WORKSPACE_FOLDER%/Automate/processPool.py",
                "--file",
                "%DOC%",
                "--o",
                "%OUTDIR%"
            ],
            "env": {
                "PYTHONIOENCODING": "utf_8"
            }
        }
    ],
    "latex-workshop.view.pdf.trim": 2,
    "latex-workshop.message.latexlog.exclude": [
        "I've expected \\\\MT_cramped_internal:Nn to have",
        "You have requested package",
        "Using \\\\overbracket and \\\\underbracket from",
        "I'm going to overwrite the following commands",
        "Unable to apply patch",
        "Empty bibliography",
        "\\\\float@addtolists detected!",
        "Font shape .* undefined"
    ],
    // "latex-workshop.message.error.show": false,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "git.confirmSync": false,
    "git.postCommitCommand": "sync",
    "git.autoStash": false,
    "latex-workshop.message.warning.show": false,
    "latex-workshop.message.error.show": false,
    "latex-workshop.latex.build.clearLog.everyRecipeStep.enabled": false,
    "latex-workshop.linting.chktex.enabled": true,
    
    "editor.fontFamily": "",
    "editor.unicodeHighlight.allowedCharacters": {
        "γ": true,
        "α": true,
        "ρ": true,
        "σ": true,
        "ν": true,
        "ℝ": true,
        "ι": true
    },
    "latex-workshop.latex.outDir": "%DIR%/out",
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
    "latex-workshop.latex.option.maxPrintLine.enabled": true,
    "latex-workshop.linting.run": "onType",
    "editor.wordWrap": "bounded",
}